@model List<Dynamic_Form_Builder.ViewModel.FormVM>

@{
    ViewData["Title"] = "Form List";
}

<div class="container my-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table table-bordered table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 60px;">#</th>
                            <th>Form Title</th>
                            <th style="width: 140px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var form = Model[i];
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@form.Title</td>
                                <td>
                                    <a asp-action="Preview" asp-route-id="@form.FormId" class="btn btn-sm btn-primary me-2" title="Preview Form">
                                        <i class="bi bi-eye"></i> Preview
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info mb-0">No forms available.</div>
            }
        </div>
    </div>

    <a asp-action="Create" class="btn btn-success mt-4">
        <i class="bi bi-plus-lg"></i> Create New Form
    </a>
</div>
